<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	 xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">

  <modelVersion>4.0.0</modelVersion>
  <groupId>org.societies.orchestration</groupId>
  <artifactId>cisdatacollector</artifactId>
  <packaging>bundle</packaging>
  <version>${version.ico}</version>
  <description>CIS data collector</description>
  <developers>
    <developer>
      <id>bjornmm</id>
      <name>Bjorn Magnus Mathisen</name>
      <email>bjornmagnus.mathisen@sintef.no</email>
      <organization>SINTEF</organization>
      <roles>
	<role>owner</role>
	<role>developer</role>
      </roles>
    </developer>
  </developers>
  
  <parent>
    <groupId>org.societies</groupId>
    <artifactId>spring-osgi-parent</artifactId>
    <relativePath>../../parent/spring-osgi.xml</relativePath>
    <version>0.1</version>
  </parent>
  <properties>
    <powermock.version>1.4.12</powermock.version>
  </properties>
  <dependencies>
    <dependency>
      <groupId>org.json</groupId>
      <artifactId>json</artifactId>
      <version>20090211</version>
    </dependency>
    <!-- spring -->
      <dependency>
          <groupId>org.slf4j</groupId>
          <artifactId>com.springsource.slf4j.org.apache.commons.logging</artifactId>
      </dependency>


    <dependency>
      <groupId>org.societies.api.external</groupId>
      <artifactId>societies-api</artifactId>
      <version>${release.version}</version>
    </dependency>
    <dependency>
      <groupId>org.societies.orchestration.api</groupId>
      <artifactId>intelligent-community-orchestration-api</artifactId>
      <version>${version.ico}</version>
      <scope>provided</scope>
    </dependency>
      <dependency>
          <groupId>org.societies.context-management</groupId>
          <artifactId>context-mgmt-api</artifactId>
          <version>0.1-SNAPSHOT</version>
      </dependency>
      <dependency>
          <groupId>org.societies.api.external</groupId>
          <artifactId>societies-api</artifactId>
          <version>0.1</version>
      </dependency>
  </dependencies>

  <build>
    <plugins>
      <plugin>
	<groupId>org.apache.felix</groupId>
	<artifactId>maven-bundle-plugin</artifactId>
	<extensions>true</extensions>
	<configuration>
	  <instructions>
	    <Bundle-Activator></Bundle-Activator>
	    <Embed-Dependency>scope=compile|runtime</Embed-Dependency>
	    <Embed-Transitive>true</Embed-Transitive>
	  </instructions>
	</configuration>
      </plugin>
      <plugin>
	<groupId>org.codehaus.mojo</groupId>
	<artifactId>cobertura-maven-plugin</artifactId>
      </plugin>
      <plugin>
	<artifactId>maven-clean-plugin</artifactId>
	<configuration>
	  <filesets>
	    <fileset>
	      <!-- created after mvn test using the Derby DBMS -->
	      <directory>cpatest</directory>
	    </fileset>
	    <fileset>
	      <directory>.</directory>
	      <includes>
		<!-- created after mvn test using the Derby DBMS -->
		<include>derby.log</include>
	      </includes>
	    </fileset>
	  </filesets>
	</configuration>
      </plugin>
      <plugin>
	<groupId>org.apache.maven.plugins</groupId>
	<artifactId>maven-dependency-plugin</artifactId>
	<configuration>
	  <artifactItems>
	    <artifactItem>
	      <groupId>${project.groupId}</groupId>
	      <artifactId>${project.artifactId}</artifactId>
	      <version>${version.ico}</version>
	      <type>bundle</type>
	      <overWrite>true</overWrite>
	      <outputDirectory>${spring.osgi.deploy.dir}</outputDirectory>
	    </artifactItem>
	  </artifactItems>
	</configuration>
      </plugin>
    </plugins>
  </build>
</project>