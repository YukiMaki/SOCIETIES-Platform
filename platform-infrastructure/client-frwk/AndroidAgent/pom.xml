<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>org.societies.comm.android</groupId>
    <artifactId>AndroidAgent</artifactId>
    <version>${version.comm}</version>
    <packaging>apk</packaging>

    <parent>
	    <groupId>org.societies</groupId>
	    <artifactId>android-parent</artifactId>
	    <version>0.1</version>
    </parent>

    <dependencies>
    		<dependency>
			<groupId>org.societies.api.external</groupId>
			<artifactId>societies-api</artifactId>
			<version>${release.version}</version>
		</dependency>
		<dependency>
		    	<groupId>org.societies.comm.xmpp</groupId>
		    	<artifactId>CommunicationFrameworkCommons</artifactId>
		    	<version>${version.comm}</version>
		</dependency>
		<dependency>
		    	<groupId>org.societies.utilities</groupId>
		    	<artifactId>DBC</artifactId>
		    	<version>${release.version}</version>
		</dependency>
	    	<dependency>
	                <groupId>com.google.android</groupId>
            		<artifactId>android</artifactId>
		</dependency>
		<dependency>
			<groupId>org.societies</groupId>
			<artifactId>AndroidAgentApi</artifactId>
			<version>${version.comm}</version>
		</dependency>
		<dependency>
			<groupId>org.asmack</groupId>
	        	<artifactId>asmack</artifactId>
		</dependency>
		<dependency>
			<groupId>org.societies.android.jaxb</groupId>
			<artifactId>jaxb-android-societies</artifactId>
			<version>0.1</version>
		</dependency>
		<dependency>
			<groupId>org.slf4j</groupId>
			<artifactId>slf4j-android</artifactId>
			<version>1.6.1-RC1</version>
		</dependency>
    </dependencies>

   <build>
	<finalName>${project.artifactId}</finalName>
	<sourceDirectory>src/main/java</sourceDirectory>
        <plugins>
            <plugin>
                <groupId>com.jayway.maven.plugins.android.generation2</groupId>
                <artifactId>maven-android-plugin</artifactId>
                <version>2.9.0-issue170</version>
		<extensions>true</extensions>
                <configuration>
                    <sdk>
			<platform>${test.android.apilevel}</platform>
                    <path>${android.home}</path>
		    </sdk>
		    <emulator>
		        <!-- the name of the avd device to use for starting the emulator -->
		        <avd>${test.android.avd}</avd>
		    </emulator>
		    <undeployBeforeDeploy>true</undeployBeforeDeploy>
		    <unpackDependencies>false</unpackDependencies>
		    <fileToUnpack>${project.artifactId}.${project.version}-shaded.apk</fileToUnpack>
		    <jvmArguments>
			    <jvmArgument>-Xms256m</jvmArgument>
			    <jvmArgument>-Xmx512m</jvmArgument>
		    </jvmArguments>
                </configuration>
            </plugin>
	    <plugin>
		    <groupId>org.apache.maven.plugins</groupId>
		    <artifactId>maven-shade-plugin</artifactId>
		    <version>1.5</version>
		    <configuration>
			    <shadedArtifactAttached>true</shadedArtifactAttached>
			    <finalName>${project.artifactId}.${project.version}-shaded</finalName>
			    <relocations>
				    <relocation>
					    <pattern>javax.xml.bind</pattern>
					    <shadedPattern>jaxb</shadedPattern>
				    </relocation>
				    <relocation>
					    <pattern>javax.xml.stream</pattern>
					    <shadedPattern>stax</shadedPattern>
				    </relocation>
			    </relocations>
		    </configuration>
	    </plugin>
        </plugins>
    </build>
</project>
