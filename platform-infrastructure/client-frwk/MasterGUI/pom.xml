        <artifactId>android-parent</artifactId>
        <version>0.1</version>
        <relativePath>../../../parent/android.xml</relativePath>
   </parent>

   <groupId>org.societies.android.platform.gui</groupId>
   <artifactId>MasterGUI</artifactId>
   <name>MasterGUI</name>
   <version>${release.version}</version>
   <packaging>apk</packaging>

   <developers>
      <developer>
		 <name>WP4 Client Framework Team</name>
		<!-- Name of component author-->
		 <email>http://www.ict-societies.eu</email>
		<!-- Component author e-mail-->
	  </developer>
   </developers>


    <dependencies>
		<dependency>
		    <groupId>org.societies.utilities</groupId>
		    <artifactId>DBC</artifactId>
		    <version>${release.version}</version>
		</dependency>
    
		<dependency>
		        <groupId>com.google.android</groupId>
            		<artifactId>android</artifactId>
		</dependency>
		<dependency>
            <groupId>com.phonegap</groupId>
            <artifactId>phonegap</artifactId>
		</dependency>
	
	
		<dependency>
	    	<groupId>org.societies.api.external</groupId>
	    	<artifactId>societies-api</artifactId>
	    	<version>${release.version}</version>
		</dependency>
		<dependency>
		    <groupId>org.societies.comm.xmpp</groupId>
		    <artifactId>CommunicationFrameworkCommons</artifactId>
		    <version>${version.comm}</version>
		</dependency>
		<dependency>
			<groupId>org.societies</groupId>
			<artifactId>AndroidAgentApi</artifactId>
			<version>${version.comm}</version>
			<!--exclusions>
		   		<exclusion>
					<groupId>org.societies.android.jaxb</groupId>
					<artifactId>jaxb-android-societies</artifactId>
	 	   		</exclusion>
			</exclusions-->
		</dependency>
		<dependency>
			<groupId>org.asmack</groupId>
	    	<artifactId>asmack</artifactId>
		</dependency>
	
		<dependency>
			<groupId>org.societies.android.platform</groupId>
			<artifactId>CoreInterfaces</artifactId>
			<version>${release.version}</version>
		</dependency>
	
		<dependency>
 			<groupId>org.slf4j</groupId>
  			<artifactId>slf4j-api</artifactId>
			<version>1.6.2</version>
		</dependency>	
	
		<dependency>
	    	<groupId>xerces</groupId>
	    	<artifactId>xercesImpl</artifactId>
	    	<version>2.10.0</version>
	    	<exclusions>
				<exclusion>
		    		<groupId>xml-apis</groupId> 
		    		<artifactId>xml-apis</artifactId>
				</exclusion>
	    	</exclusions>
		</dependency>
		
		<dependency>
	    	<groupId>org.societies.android.jaxb</groupId>
	    	<artifactId>jaxb-android-societies</artifactId>
	    	<version>0.1</version>
		</dependency>

		<!--dependency>
	    	<groupId>org.societies.comm.android</groupId>
	    	<artifactId>JaxbAndroidApi</artifactId>
	    	<version>${version.comm}</version>
		</dependency-->

		<dependency>
   			<groupId>org.societies.android.platform.servicemonitor</groupId>
   			<artifactId>SocietiesServiceMonitor</artifactId>
    		<version>${release.version}</version>
   			<type>apklib</type>
		</dependency>
		<dependency>
  	 		<groupId>org.societies.android.platform.cssmanager</groupId>
   			<artifactId>SocietiesCSSManager</artifactId>
   			<version>${release.version}</version>
   			<type>apklib</type>
		</dependency>
		<dependency>
    		<groupId>org.societies.android.platform.devicestatus</groupId>
   			<artifactId>LocalDeviceStatus</artifactId>
   			<version>${release.version}</version>
   			<type>apklib</type>
		</dependency>

    	<dependency>
    		<groupId>com.google.code.gson</groupId>
        	<artifactId>gson</artifactId>
			<version>2.1</version>
        	<scope>compile</scope>
		</dependency>

        
    </dependencies>

    <build>
	<finalName>${project.artifactId}</finalName>
	<sourceDirectory>src</sourceDirectory>
        <plugins>
            <plugin>
                <groupId>com.jayway.maven.plugins.android.generation2</groupId>
                <artifactId>maven-android-plugin</artifactId>
                <version>2.9.0-issue170</version>
		<extensions>true</extensions>
                <configuration>
                    <sdk>
			<platform>${test.android.apilevel}</platform>
                    <path>${android.home}</path>
		    </sdk>
		    <emulator>
		        <!-- the name of the avd device to use for starting the emulator -->
		        <avd>${test.android.avd}</avd>
		    </emulator>
		    <undeployBeforeDeploy>true</undeployBeforeDeploy>
		    <unpackDependencies>false</unpackDependencies>
		    <fileToUnpack>${project.artifactId}.${project.version}-shaded.apk</fileToUnpack>
		    <jvmArguments>
			    <jvmArgument>-Xms256m</jvmArgument>
			    <jvmArgument>-Xmx512m</jvmArgument>
		    </jvmArguments>
                </configuration>
            </plugin>
	    <plugin>
		    <groupId>org.apache.maven.plugins</groupId>
		    <artifactId>maven-shade-plugin</artifactId>
		    <version>1.5</version>
		    <configuration>
			    <shadedArtifactAttached>true</shadedArtifactAttached>
			    <finalName>${project.artifactId}.${project.version}-shaded</finalName>
			    <relocations>
				    <relocation>
					    <pattern>javax.xml.bind</pattern>
					    <shadedPattern>jaxb</shadedPattern>
				    </relocation>
				    <relocation>
					    <pattern>javax.xml.stream</pattern>
					    <shadedPattern>stax</shadedPattern>
				    </relocation>
			    </relocations>
		    </configuration>
	    </plugin>
        </plugins>
    </build>
</project>
