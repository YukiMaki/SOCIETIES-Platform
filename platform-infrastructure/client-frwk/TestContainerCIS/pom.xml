<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
   <modelVersion>4.0.0</modelVersion>

   <parent>
        <groupId>org.societies</groupId>
        <artifactId>android-parent</artifactId>
        <version>RELEASE</version>
   </parent>

   <groupId>org.societies.android.platform</groupId>
   <artifactId>testcontainerCIS</artifactId>
   <name>Test Container CIS</name>
   <version>${release.version}</version>
   <packaging>apk</packaging>

   <dependencies>
		<dependency>
	    	<groupId>com.google.android</groupId>
	        <artifactId>android</artifactId> 
	        <exclusions>
				<!-- Provided by Android -->
				<exclusion>
					<artifactId>xpp3</artifactId>
					<groupId>xpp3</groupId>
				</exclusion>
			</exclusions>
		</dependency>
		<dependency>
			<groupId>org.societies.comm.android</groupId>
			<artifactId>AndroidAgent</artifactId>
			<version>${version.comm}</version>
		</dependency>
		<dependency>
	    <groupId>org.societies.api.external</groupId>
		    <artifactId>societies-api</artifactId>
		    <version>${release.version}</version>
		</dependency>
		<dependency>
			<groupId>org.societies.android.api.internal</groupId>
			<artifactId>societies-android-api-internal</artifactId>
			<version>${release.version}</version>
		</dependency>
		<dependency>
   			<groupId>org.societies.android.platform.cis</groupId>
   			<artifactId>CommunityManagerService</artifactId>
    		<version>${release.version}</version>
   			<type>apklib</type>
		</dependency>
    	<dependency>
    		<groupId>com.google.code.gson</groupId>
        	<artifactId>gson</artifactId>
        	<scope>compile</scope>
		</dependency>
		<dependency>
			<groupId>org.simpleframework</groupId>
			<artifactId>simple-xml</artifactId>
			<exclusions>
			    <!-- StAX is not available on Android -->
			    <exclusion>
			        <artifactId>stax</artifactId>
			        <groupId>stax</groupId>
			    </exclusion>
			    <exclusion>
			        <artifactId>stax-api</artifactId>
			        <groupId>stax</groupId>
			    </exclusion>
			    <!-- Provided by Android -->
			    <exclusion>
			        <artifactId>xpp3</artifactId>
			        <groupId>xpp3</groupId>
			    </exclusion>
			</exclusions>
		</dependency>
    </dependencies>

    <build>
        <finalName>${project.artifactId}</finalName>
        <sourceDirectory>src</sourceDirectory>
        <plugins>
            <plugin>
                <groupId>com.jayway.maven.plugins.android.generation2</groupId>
                <artifactId>android-maven-plugin</artifactId>
            </plugin>
        </plugins>
    </build>
</project>
