			<version>10.5.1000001.764942</version>
			<scope>test</scope> 
		</dependency>
	</dependencies>
	<parent>
		<groupId>org.societies</groupId>
		<artifactId>spring-osgi-parent</artifactId>
		<relativePath>../../parent/spring-osgi.xml</relativePath>
		<version>0.1</version>
	</parent>
	
	<!-- Build Settings -->
	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.felix</groupId>
				<artifactId>maven-bundle-plugin</artifactId>
				<extensions>true</extensions>
				<configuration>
					<instructions><!-- TODO should not export any packages!! -->
						<Export-Package>
							org.societies.privacytrust.trust.api.**
						</Export-Package>
						<Embed-Dependency>*;scope=compile|runtime</Embed-Dependency>
						<Embed-Transitive>false</Embed-Transitive>
						<Import-Package>*;resolution:=optional</Import-Package> 
					</instructions> 
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>cobertura-maven-plugin</artifactId>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-dependency-plugin</artifactId>
				<configuration>
					<artifactItems>
						<artifactItem>
							<groupId>${project.groupId}</groupId>
							<artifactId>${project.artifactId}</artifactId>
							<version>${version.pt}</version>
							<type>jar</type>
							<overWrite>true</overWrite>
							<outputDirectory>${spring.osgi.deploy.dir}</outputDirectory>
						</artifactItem>
					</artifactItems>
				</configuration>
			</plugin>
			<plugin>
				<artifactId>maven-clean-plugin</artifactId>
				<configuration>
					<filesets>
						<fileset> 
							<!-- created after mvn test using the Derby DBMS -->
							<directory>trustdb</directory>
						</fileset>
						<fileset>
							<directory>.</directory>
							<includes> 
								<!-- created after mvn test using the Derby DBMS -->
								<include>derby.log</include>
							</includes>
						</fileset>
					</filesets>
				</configuration>
			</plugin>
		</plugins> 	
	</build>
	
	<!-- More Project Information -->
