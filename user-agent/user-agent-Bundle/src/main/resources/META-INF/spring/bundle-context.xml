<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-2.5.xsd"
	xmlns:context="http://www.springframework.org/schema/context">

	<!-- regular spring configuration file defining the beans for this bundle. 
		We've kept the osgi definitions in a separate configuration file so that 
		this file can easily be used for integration testing outside of an OSGi environment -->


	<bean id="uam" class="org.societies.useragent.monitoring.UserActionMonitor"
		name="uam" depends-on="ctxBroker, eventMgr" init-method="initialiseUserActionMonitor">
		<property name="ctxBroker" ref="ctxBroker"></property>
		<property name="eventMgr" ref="eventMgr"/>
	</bean>	

	<bean id="feedback" class="org.societies.useragent.feedback.UserFeedback"
		name="feedback" init-method="initialiseUserFeedback">
	</bean>
	
	<bean id="dm" class="org.societies.useragent.decisionmaking.DecisionMaker"
		name="dm" depends-on="conflict,feedback,servicedis">
		<property name="manager" ref="conflict"></property>
		<property name="feedbackHandler" ref="feedback"></property>
		<property name="serDiscovery" ref="servicedis"></property>
	</bean>
	<bean id="conflict" class="org.societies.useragent.conflict.ConflictResolutionManager"
	      name="conflict">
	</bean>
</beans>